<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="4sg.xsl"?>
<root>
	<title>Simple Sankey Diagram Example</title>
	<piles>
		<pile>
			<title>from</title>
			<box id="here">here</box>
			<box id="around">around</box>
		</pile>
		<pile>
			<title>to</title>
			<box id="4">over there (id <id/>)</box>
			<box id="there">there</box>
		</pile>
	</piles>
	<flows>
		<flow value="50" from="here" to="there">from here to there</flow>
		<flow value="10" from="around" to="4"/>
		<flow value="40" from="around" to="there">value is <value/></flow>
	</flows>
</root>
